<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent background -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Top border -->
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:height="2dp">
        <shape>
            <solid android:color="#a3bfa3" />
        </shape>
    </item>

    <!-- Right border -->
    <item
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        android:width="2dp">
        <shape>
            <solid android:color="#a3bfa3" />
        </shape>
    </item>

    <!-- Bottom border -->
    <item
        android:left="10dp"
        android:right="10dp"
        android:bottom="0dp"
        android:height="2dp">
        <shape>
            <solid android:color="#a3bfa3" />
        </shape>
    </item>

</layer-list>
