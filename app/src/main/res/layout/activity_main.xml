<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

            </LinearLayout>

            <!-- LOGIN FORM CONTAINER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:paddingTop="35dp"
                android:background="@drawable/login_form_background">

                <!-- USERNAME CONTAINER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/input_container_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\uf007"
                        android:textColor="#32c95d"
                        android:fontFamily="@font/font_awesome_6_free_solid_900"
                        android:textSize="16sp"
                        android:layout_marginEnd="15dp" />

                    <EditText
                        android:id="@+id/Username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Username"
                        android:textColor="#32c95d"
                        android:textColorHint="#418a50"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:padding="0dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>

                <!-- PASSWORD CONTAINER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_container_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\uf023"
                        android:textColor="#32c95d"
                        android:fontFamily="@font/font_awesome_6_free_solid_900"
                        android:textSize="16sp"
                        android:layout_marginEnd="15dp" />

                    <EditText
                        android:id="@+id/Password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Password"
                        android:textColor="#32c95d"
                        android:textColorHint="#418a50"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:padding="0dp"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <!-- LOGIN AND RESET BUTTON -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="50dp">

                    <!-- RESET -->
                    <LinearLayout
                        android:id="@+id/Reset"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/initial_button_background"
                        android:elevation="6dp"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\uf021"
                            android:textSize="16dp"
                            android:textColor="#042a10"
                            android:fontFamily="@font/font_awesome_6_free_solid_900"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RESET"
                            android:textSize="12dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="#042a10"
                            android:letterSpacing="0.02"/>
                    </LinearLayout>

                    <!-- LOGIN -->
                    <LinearLayout
                        android:id="@+id/Login"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="@drawable/initial_button_background"
                        android:elevation="6dp"
                        android:padding="10dp"
                        android:layout_marginLeft="60dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\uf2f6"
                            android:textSize="16dp"
                            android:textColor="#042a10"
                            android:fontFamily="@font/font_awesome_6_free_solid_900"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SIGN IN"
                            android:textSize="12dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="#042a10"
                            android:letterSpacing="0.02"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>