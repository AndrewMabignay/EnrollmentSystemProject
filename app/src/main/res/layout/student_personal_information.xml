<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6f2ec"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Information"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="12dp"
        android:textColor="#031f0c" />

    <!-- Form Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:clipToPadding="false">

        <!-- Student No -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Student No."
                android:textColor="#031f0c"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"/>

            <EditText
                android:id="@+id/StudentNumberPersonalInformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#031f0c"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <!-- Student Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textColor="#031f0c"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"/>

            <EditText
                android:id="@+id/StudentNamePersonalInformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#031f0c"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <!-- Course -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Course"
                android:textColor="#031f0c"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"/>

            <EditText
                android:id="@+id/StudentCoursePersonalInformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#031f0c"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <!-- Major -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Major"
                android:textColor="#031f0c"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"/>

            <EditText
                android:id="@+id/StudentMajorPersonalInformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#031f0c"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Year Level -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Year Level"
                android:textColor="#031f0c"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"/>

            <EditText
                android:id="@+id/StudentYearLevelPersonalInformation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#031f0c"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"
                android:background="@android:color/transparent" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
